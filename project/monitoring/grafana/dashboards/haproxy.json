{
  "dashboard": {
    "title": "HAProxy",
    "tags": ["haproxy", "loadbalancer"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "HAProxy Up",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"haproxy\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Backend Servers Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "haproxy_backend_servers",
            "format": "table",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Current Sessions",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "haproxy_backend_current_sessions",
            "legendFormat": "{{backend}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Requests per Second",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(haproxy_backend_http_requests_total[5m])",
            "legendFormat": "{{backend}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}

