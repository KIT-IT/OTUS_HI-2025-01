{
  "title": "PostgreSQL Cluster",
  "tags": ["postgresql", "database"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 0,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "PostgreSQL Up",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "pg_up",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "prometheus"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Active Connections",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "sum(pg_stat_database_numbackends) by (instance)",
          "legendFormat": "{{instance}}",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "prometheus"}
        }
      ]
    },
    {
      "id": 3,
      "title": "Database Size (GB)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {
          "expr": "pg_database_size_bytes{datname!~\"template.*\"} / 1024 / 1024 / 1024",
          "legendFormat": "{{datname}}",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "prometheus"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes"
        }
      }
    },
    {
      "id": 4,
      "title": "Replication Lag (seconds)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "targets": [
        {
          "expr": "pg_replication_lag",
          "legendFormat": "{{instance}}",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "prometheus"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 5,
      "title": "Transactions per Second",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit{datname!~\"template.*\"}[5m]) + rate(pg_stat_database_xact_rollback{datname!~\"template.*\"}[5m])",
          "legendFormat": "{{datname}}",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "prometheus"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      }
    },
    {
      "id": 6,
      "title": "Cache Hit Ratio",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "targets": [
        {
          "expr": "sum(rate(pg_stat_database_blks_hit{datname!~\"template.*\"}[5m])) / sum(rate(pg_stat_database_blks_hit{datname!~\"template.*\"}[5m]) + rate(pg_stat_database_blks_read{datname!~\"template.*\"}[5m]))",
          "legendFormat": "Cache Hit Ratio",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "prometheus"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "max": 1
        }
      }
    }
  ]
}
