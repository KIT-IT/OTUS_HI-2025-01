# Salt Minion Configuration
# Generated by Ansible

# Master settings
master: {{ minion_master_ip }}
master_port: {{ salt_minion_master_port | default(4506) }}

# Minion ID (will be hostname by default)
id: {{ inventory_hostname }}

# Logging
log_level: {{ salt_minion_log_level | default('info') }}
log_file: /var/log/salt/minion

# Retry settings
acceptance_wait_time: {{ salt_minion_acceptance_wait_time | default(10) }}
acceptance_wait_time_max: {{ salt_minion_acceptance_wait_time_max | default(0) }}

