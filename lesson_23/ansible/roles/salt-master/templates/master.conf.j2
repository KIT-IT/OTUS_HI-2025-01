# Salt Master Configuration
# Generated by Ansible

# Network settings
interface: {{ salt_master_interface }}
publish_port: {{ salt_master_publish_port }}
ret_port: {{ salt_master_ret_port }}

# File roots
file_roots:
  base:
    - /srv/salt

# Pillar roots
pillar_roots:
  base:
    - /srv/pillar

# Auto accept minions (для тестирования)
# В продакшене лучше отключить и принимать ключи вручную
auto_accept: {{ salt_master_auto_accept | default(true) }}

# Logging
log_level: {{ salt_master_log_level | default('info') }}
log_file: /var/log/salt/master
log_file_log_level: {{ salt_master_log_level | default('info') }}

# Worker threads
worker_threads: {{ salt_master_worker_threads | default(5) }}

# Timeout
timeout: {{ salt_master_timeout | default(60) }}

